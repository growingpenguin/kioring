<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kioring_background2"
    tools:context=".MainActivity9">

    <TextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:fontFamily="@font/bold"
        android:text="@string/step_1"
        android:textColor="#ED5351"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round1"
        android:backgroundTint="#48B96F"
        android:fontFamily="@font/bold"
        android:text="@string/coupon"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/round1"
        android:backgroundTint="#ED5351"
        android:fontFamily="@font/bold"
        android:text="@string/card"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/step1" />

    <TextView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="@string/step_2"
        android:textColor="#ED5351"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="304dp"
        android:layout_height="225dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:drawableTop="@drawable/credit"
        android:text="신용카드"
        android:textSize="12dp"
        android:paddingTop="10dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/step2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="5dp"
        android:drawableTop="@drawable/kakao"
        android:paddingTop="16dp"
        android:text="카카오페이"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/step2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/samsung"
        android:paddingTop="11dp"
        android:text="삼성페이"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button4"
        android:layout_width="135dp"
        android:layout_height="95dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/white"
        android:drawableTop="@drawable/zeropay"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="제로페이"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/bold"
        android:text="STEP 3"
        android:textColor="#ED5351"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <Button
        android:id="@+id/point"
        android:layout_width="271dp"
        android:layout_height="95dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round1"
        android:backgroundTint="#ED5351"
        android:fontFamily="@font/bold"
        android:text="포인트 적립"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step3" />

    <Button
        android:id="@+id/button16"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>